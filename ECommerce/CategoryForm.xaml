<UserControl x:Name="usercontrolCategoryForm"
    x:Class="Syntra.VDOAP.CProef.ECommerce.CategoryForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Syntra.VDOAP.CProef.ECommerce"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Background="{DynamicResource MaterialDesignPaper}">
    <Grid Grid.IsSharedSizeScope="True" Margin="0,0,0,0" >
        <Label x:Name="Title" Content=" Add new category" HorizontalAlignment="Center"/>

        <TabControl x:Name="TCLocalized" Margin="0,40,0,239" Background="{DynamicResource MaterialDesignPaper}" BorderBrush="Transparent"></TabControl>

        <WrapPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" >
            <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="btnCancel_Click" Margin="5,5,5,5"/>
            <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="btnSave_Click" Margin="5,5,5,5"/>
        </WrapPanel>


    </Grid>
</UserControl>
